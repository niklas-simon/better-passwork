{
  "name": "better-passwork",
  "type": "module",
  "version": "1.2.1",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "pnpm run build:firefox && pnpm run build:chrome",
    "build:firefox": "tsc -b && vite build --config vite.firefox.ts",
    "build:chrome": "tsc -b && vite build --config vite.chrome.ts",
    "publish:firefox": "set /p WEB_EXT_API_KEY=api key: && set /p WEB_EXT_API_SECRET=api secret: && cd release && pnpx web-ext sign -s ../dist/firefox --channel listed ",
    "preview": "vite preview"
  },
  "dependencies": {
    "@mantine/core": "^8.3.5",
    "@mantine/form": "^8.3.5",
    "@mantine/hooks": "^8.3.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-feather": "^2.0.10",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.3",
    "@types/chrome": "^0.1.1",
    "@types/node": "^24.0.15",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/webextension-polyfill": "^0.12.4",
    "@vitejs/plugin-react": "^4.7.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.5",
    "vite-plugin-zip-pack": "^1.2.4"
  }
}
